{
    "name": "robertboloc/raml2apigility",
    "description": "Apigility scaffolding generator based on a RAML specification",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Boloc",
            "email": "robertboloc@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "alecsammon/php-raml-parser": "^2.2",
        "league/climate": "^3.2",
        "zendframework/zend-i18n": "^2.7",
        "zfcampus/zf-apigility-admin": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Raml2Apigility\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raml2ApigilityTest\\Unit\\": "test/unit",
            "Raml2ApigilityTest\\Integration\\": "test/integration"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
